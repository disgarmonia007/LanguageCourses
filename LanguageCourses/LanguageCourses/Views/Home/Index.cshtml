@model LanguageCourses.ViewModels.RegisterViewModel

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication4</title>
    <title>Sign Up Form by Colorlib</title>

    <!-- Main css -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

  
        
    <form id="msform" method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>

        <!-- fieldsets -->
        <fieldset>
            <h2 class="fs-title">Регистрация нового пользователя</h2>
            <input asp-for="Email"  placeholder="Email" />
            <span asp-validation-for="Email"></span>
            <input asp-for="Password"  placeholder="Password" />
            <span asp-validation-for="Password"></span>
            <input asp-for="PasswordConfirm" placeholder="Confirm Password" />
            <span asp-validation-for="PasswordConfirm"></span>
            <div>
                <input class="action-button" type="submit" value="Регистрация"/>
            </div>
        </fieldset>
    </form>
</body>
</html>